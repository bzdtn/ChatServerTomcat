<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
    <servlet>
        <servlet-name>GetList</servlet-name>
        <servlet-class>ua.kiev.prog.GetListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetList</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Add</servlet-name>
        <servlet-class>ua.kiev.prog.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>ua.kiev.prog.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>ua.kiev.prog.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetUsers</servlet-name>
        <servlet-class>ua.kiev.prog.GetUsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetUsers</servlet-name>
        <url-pattern>/getusers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SetUserStatus</servlet-name>
        <servlet-class>ua.kiev.prog.SetStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SetUserStatus</servlet-name>
        <url-pattern>/setstatus</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetUserStatus</servlet-name>
        <servlet-class>ua.kiev.prog.GetStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetUserStatus</servlet-name>
        <url-pattern>/getstatus</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JoinRoom</servlet-name>
        <servlet-class>ua.kiev.prog.JoinRoomServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JoinRoom</servlet-name>
        <url-pattern>/joinroom</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ExitRoom</servlet-name>
        <servlet-class>ua.kiev.prog.ExitRoomServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExitRoom</servlet-name>
        <url-pattern>/exitroom</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>ua.kiev.prog.Sessions</listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
